{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "memory": 1024
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "FRONTEND_URL": "${VERCEL_URL}"
  },
  "installCommand": "cd ../.. && pnpm install"
}
